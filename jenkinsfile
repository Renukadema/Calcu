pipeline {
    agent any

   stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/fayazdev/Calculator.git'

                // Run Maven on a Unix agent.
                sh "mvn -Dmaven.test.failure.ignore=true clean package"

                // To run Maven on a Windows agent, use
                // bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        stage('Build docker') {
            steps {
                //sh "sudo docker build -t calculator . --file dockerfile"
                sh '''#!/bin/bash
                   docker build -t calculator . --file dockerfile
                   '''
            }
        }
        stage('Helm Package') {
            steps {
                sh '''#!/bin/bash
                helm package helm/calculator
            '''
            }
        }
        stage('Kubernetes Deployment') {
            steps {
                sh '''#!/bin/bash
                helm install calculator helm/calculator
            '''
           }
        }

    }
}
